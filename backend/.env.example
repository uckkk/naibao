# 后端示例配置（复制为 backend/.env 后按需修改）

# 服务器配置
SERVER_PORT=8080
GIN_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=naibao
DB_SSLMODE=disable

# 生产建议：关闭 AutoMigrate，使用 database/schema.sql + migrations 作为唯一来源
# DB_AUTO_MIGRATE=false

# Redis 配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 配置（生产务必替换为强随机值）
JWT_SECRET=your-secret-key
